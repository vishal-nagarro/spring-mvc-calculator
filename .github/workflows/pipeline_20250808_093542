name: Maven CI/CD Pipeline

on:
  push:
    branches:
      - nexops-pipeline_20250808_093542
  pull_request:
    branches:
      - master
  workflow_dispatch:

env:
  MAVEN_OPTS: "-Dmaven.wagon.http.ssl.insecure=true -Dmaven.wagon.http.ssl.allowall=true"

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up JDK 1.8
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '8'

      - name: Cache Maven packages
        uses: actions/cache@v3
        with:
          path: ~/.m2/repository
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven-

      - name: Run SonarQube analysis
        uses: SonarSource/sonarcloud-github-action@v2
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
        with:
          projectBaseDir: .
          args: >
            -Dsonar.projectKey=spring-mvc-calculator
            -Dsonar.organization=${{ secrets.SONAR_ORGANIZATION }}
            -Dsonar.host.url=${{ secrets.SONAR_HOST_URL }}

      - name: Build with Maven (clean install)
        run: mvn -B clean install --file pom.xml

      - name: Upload build artifact (WAR)
        uses: actions/upload-artifact@v3
        with:
          name: spring-mvc-calculator-war
          path: target/spring-mvc-calculator.war

      - name: Publish WAR to Artifactory
        uses: jfrog/setup-jfrog-cli@v3
        with:
          version: latest
        env:
          JF_ARTIFACTORY_URL: ${{ secrets.JF_ARTIFACTORY_URL }}
          JF_ARTIFACTORY_USER: ${{ secrets.JF_ARTIFACTORY_USER }}
          JF_ARTIFACTORY_API_KEY: ${{ secrets.JF_ARTIFACTORY_API_KEY }}
        continue-on-error: true

      - name: Deploy WAR to Artifactory
        run: |
          jfrog rt upload "target/spring-mvc-calculator.war" "libs-release-local/spring-mvc-calculator/spring-mvc-calculator.war"
        env:
          JF_ARTIFACTORY_URL: ${{ secrets.JF_ARTIFACTORY_URL }}
          JF_ARTIFACTORY_USER: ${{ secrets.JF_ARTIFACTORY_USER }}
          JF_ARTIFACTORY_API_KEY: ${{ secrets.JF_ARTIFACTORY_API_KEY }}
