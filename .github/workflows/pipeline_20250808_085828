# GitHub Actions CI/CD Pipeline for spring-mvc-calculator (Java/Spring MVC - Maven)
# This workflow executes on push or pull requests to dev/* branches and manual dispatch.
# It builds the project, runs JUnit tests, and uploads the resulting JAR/WAR artifact(s) from target/.

name: CI/CD Pipeline

on:
  push:
    branches:
      - 'dev/*'
  pull_request:
    branches:
      - 'dev/*'
  workflow_dispatch:

jobs:
  build-test-upload:
    name: Build, Test, and Upload Artifact
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout repository code
      - name: Checkout source code
        uses: actions/checkout@v4

      # Step 2: Set up JDK for Java build
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '17'

      # Step 3: Build the project and install dependencies
      - name: Build with Maven (install dependencies & compile)
        run: mvn clean install --batch-mode

      # Step 4: Run JUnit tests
      - name: Run tests with Maven
        run: mvn test --batch-mode

      # Step 5: Upload the built artifact(s) from target/
      - name: Upload build artifact (JAR/WAR)
        uses: actions/upload-artifact@v4
        with:
          name: build-artifact
          path: |
            target/*.jar
            target/*.war
          if-no-files-found: error

# End of pipeline configuration
# Security and artifact integrations (SonarCloud, JFrog) are NOT included since they are not required/implied above.
